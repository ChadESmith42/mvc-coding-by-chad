
@{
    ViewBag.Title = "AsYouWish";
}

<div class="jumbotron">
    <h1 class="display-3">To The Death?</h1>
    <p class="lead">@ViewBag.Message</p>
    <hr class="my-4">
    <p>Please enter the number of quotes you want for your ipsum:</p>
    <p class="lead">
        <input type="number" id="nbrLines" name="nbrLines" />
        <input type="button" id="btnSubmit" name="btnSubmit" class="btn btn-primary" value="As You Wish!" />
    </p>
</div>

<!-- Content Row -->
<div class="row">
    <div class="col-lg-12">
        <span id="pbOutput" class="col-md-6 col-md-offset-3 lead"></span>
    </div>
</div>

<script src="~/Content/scripts/asyouwish.js"></script>


